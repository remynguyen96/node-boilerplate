{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Nodejs ES6 Boilerplate Course",
  "main": "index.js",
  "repository": "https://github.com/remynguyen96/courseMysql.git",
  "author": "Remy Nguyen <nguyentietngocchau@gmail.com>",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:js": "npm run eslint -- . ",
    "lint": "npm run lint:js",
    "seed": "cross-env NODE_ENV=development babel-node src/seeds/migrate.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
    "production": "cross-env NODE_ENV=production nodemon --exec babel-node src/index.js",
    "start": "backpack dev",
    "postinstall": "backpack build",
    "build": "yarn postinstall && node scripts/build.js"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "express": "^4.16.2",
    "express-validator": "^4.2.1",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.1.0",
    "multer": "^1.3.0",
    "mysql2": "^1.5.1",
    "nodemailer": "^4.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "passport-local": "^1.0.0",
    "sequelize": "^4.22.15",
    "validator": "^9.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "backpack-core": "^0.7.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "cross-env": "^5.1.0",
    "dotenv": "^6.0.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "helmet": "^3.9.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.1",
    "simple-git": "^1.96.0",
    "winston": "^3.0.0",
    "zip-folder": "^1.0.0"
  }
}
